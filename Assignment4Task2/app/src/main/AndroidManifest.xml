<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swinburne.timur.assignment4task2">
    <uses-sdk android:minSdkVersion="21" />

    <application
        android:name="com.swinburne.timur.assignment4task2.WordApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.swinburne.timur.assignment4task2.WordListActivity"
            android:launchMode="singleTop"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.swinburne.timur.assignment4task2.WordDetailActivity"
            android:label="@string/title_word_detail"
            android:parentActivityName="com.swinburne.timur.assignment4task2.WordListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swinburne.timur.assignment4task2.WordListActivity" />
        </activity>
    </application>

</manifest>